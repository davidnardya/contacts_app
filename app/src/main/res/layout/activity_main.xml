<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal">

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/GL20H"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.2"

        />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/GL40H"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.4"

        />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/GL60H"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.6"

        />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/GL80H"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.8"

        />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/GL25V"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.25" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/GL50V"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.5"


        />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/GL75V"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.75" />

    <TextView
        android:id="@+id/sumTV"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:background="@color/colorPrimaryDark"
        android:gravity="bottom"
        android:text="0"
        android:textSize="50sp"
        app:layout_constraintBottom_toTopOf="@id/GL20H"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/zero"
        style="@style/Buttons"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:text="0"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="@id/GL25V"
        app:layout_constraintTop_toTopOf="@id/GL80H" />

    <Button
        android:id="@+id/one"
        style="@style/Buttons"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:text="1"
        app:layout_constraintBottom_toBottomOf="@id/GL80H"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="@id/GL25V"
        app:layout_constraintTop_toTopOf="@id/GL60H" />

    <Button
        android:id="@+id/four"
        style="@style/Buttons"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:text="4"
        app:layout_constraintBottom_toBottomOf="@id/GL60H"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="@id/GL25V"
        app:layout_constraintTop_toTopOf="@id/GL40H" />

    <Button
        android:id="@+id/seven"
        style="@style/Buttons"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:text="7"
        app:layout_constraintBottom_toBottomOf="@id/GL40H"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="@id/GL25V"
        app:layout_constraintTop_toTopOf="@id/GL20H" />

    <Button
        android:id="@+id/add"
        style="@style/Buttons"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:text="+"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="@id/GL25V"
        app:layout_constraintRight_toRightOf="@id/GL50V"
        app:layout_constraintTop_toTopOf="@id/GL80H" />

    <Button
        android:id="@+id/two"
        style="@style/Buttons"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:text="2"
        app:layout_constraintBottom_toBottomOf="@id/GL80H"
        app:layout_constraintLeft_toLeftOf="@id/GL25V"
        app:layout_constraintRight_toRightOf="@id/GL50V"
        app:layout_constraintTop_toTopOf="@id/GL60H" />

    <Button
        android:id="@+id/five"
        style="@style/Buttons"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:text="5"
        app:layout_constraintBottom_toBottomOf="@id/GL60H"
        app:layout_constraintLeft_toLeftOf="@id/GL25V"
        app:layout_constraintRight_toRightOf="@id/GL50V"
        app:layout_constraintTop_toTopOf="@id/GL40H" />

    <Button
        android:id="@+id/eight"
        style="@style/Buttons"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:text="8"
        app:layout_constraintBottom_toBottomOf="@id/GL40H"
        app:layout_constraintLeft_toLeftOf="@id/GL25V"
        app:layout_constraintRight_toRightOf="@id/GL50V"
        app:layout_constraintTop_toTopOf="@id/GL20H" />

    <Button
        android:id="@+id/minus"
        style="@style/Buttons"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:text="-"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="@id/GL50V"
        app:layout_constraintRight_toRightOf="@id/GL75V"
        app:layout_constraintTop_toTopOf="@id/GL80H" />

    <Button
        android:id="@+id/three"
        style="@style/Buttons"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:text="3"
        app:layout_constraintBottom_toBottomOf="@id/GL80H"
        app:layout_constraintLeft_toLeftOf="@id/GL50V"
        app:layout_constraintRight_toRightOf="@id/GL75V"
        app:layout_constraintTop_toTopOf="@id/GL60H" />

    <Button
        android:id="@+id/six"
        style="@style/Buttons"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:text="6"
        app:layout_constraintBottom_toBottomOf="@id/GL60H"
        app:layout_constraintLeft_toLeftOf="@id/GL50V"
        app:layout_constraintRight_toRightOf="@id/GL75V"
        app:layout_constraintTop_toTopOf="@id/GL40H" />

    <Button
        android:id="@+id/nine"
        style="@style/Buttons"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:text="9"
        app:layout_constraintBottom_toBottomOf="@id/GL40H"
        app:layout_constraintLeft_toLeftOf="@id/GL50V"
        app:layout_constraintRight_toRightOf="@id/GL75V"
        app:layout_constraintTop_toTopOf="@id/GL20H" />

    <Button
        android:id="@+id/buttonEquals"
        style="@style/Equals"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:text="="
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="@id/GL75V"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="@id/GL80H" />

    <Button
        android:id="@+id/divide"
        style="@style/Buttons"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:text="/"
        app:layout_constraintBottom_toBottomOf="@id/GL80H"
        app:layout_constraintLeft_toLeftOf="@id/GL75V"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="@id/GL60H" />

    <Button
        android:id="@+id/multiply"
        style="@style/Buttons"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:text="X"
        app:layout_constraintBottom_toBottomOf="@id/GL60H"
        app:layout_constraintLeft_toLeftOf="@id/GL75V"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="@id/GL40H" />

    <Button
        android:id="@+id/reset"
        style="@style/C"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:text="C"
        app:layout_constraintBottom_toBottomOf="@id/GL40H"
        app:layout_constraintLeft_toLeftOf="@id/GL75V"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="@id/GL20H" />


</androidx.constraintlayout.widget.ConstraintLayout>